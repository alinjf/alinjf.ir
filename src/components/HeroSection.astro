---
import Container from "./Container.astro";
import Title from "./Title.astro";

const features = ["CRM", "Crowd Funding", "Contract Management", "Website", "Digital Marketing", "Software Solutions"];
---

<div class="relative" id="home">
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
    </div>
    <Container>
        <div class="relative pt-36 ml-auto">
            <div class="lg:w-2/3 text-center mx-auto">
                <h1 class="text-gray-900 dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl">سازمان خود را <span class="text-primary dark:text-white">پویا</span> کنید.</h1>
                <p class="mt-8 text-gray-700 dark:text-gray-300">راه‌حل‌های کامپیوتری خلاقانه برای چالش‌های امروز و فرصت‌های فردا</p>
                <div class="mt-16 flex flex-wrap justify-center gap-y-4 gap-x-6">
                    <a href="#" class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max">
                        <span class="relative text-base font-semibold text-white">تماس با من</span>
                    </a>
                    <a href="#" class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:border before:border-transparent before:bg-primary/10 before:bg-gradient-to-b before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 dark:before:border-gray-700 dark:before:bg-gray-800 sm:w-max">
                        <span class="relative text-base font-semibold text-primary dark:text-white">خدمات</span>
                    </a>
                </div>
                <div class="hidden py-8 mt-16 border-y border-gray-100 dark:border-gray-800 sm:flex justify-between">
                    <div class="text-right">
                        <h6 class="text-lg font-semibold text-gray-700 dark:text-white">به صرفه‌ترین</h6>
                        <p class="mt-2 text-gray-500">اقدام</p>
                    </div>
                    <div class="text-right">
                        <h6 class="text-lg font-semibold text-gray-700 dark:text-white">سریع‌ترین</h6>
                        <p class="mt-2 text-gray-500">راه حل</p>
                    </div>
                    <div class="text-right">
                        <h6 class="text-lg font-semibold text-gray-700 dark:text-white">افزایش بهره‌وری</h6>
                        <p class="mt-2 text-gray-500">چابکی ‌سازمان</p>
                    </div>
                </div>
            </div>
            <div class="mt-12 grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 items-center">
                {
                    features.map((index) => {
                        return (
                            <div class="p-4 grayscale transition duration-200 hover:grayscale-0">
                                <Title>
                                    <h3 class="text-center">{index}</h3>
                                </Title>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </Container>
</div>
